<Window x:Class="FDT.Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:userControls="clr-namespace:FDT.Gui.UserControls"
        xmlns:viewModels="clr-namespace:FDT.Gui.ViewModels"
        mc:Ignorable="d"
        x:Name="ParentControl"
        Title="Deltares Flood Damage Desktop Tool 2021"
        MinWidth="800" MinHeight="600"
        Width="750" Height="600"
        Loaded="ParentControl_Loaded" >
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/StyleDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Window.DataContext>
        <viewModels:MainWindowViewModel x:Name="ViewModel"/>
    </Window.DataContext>
    <Grid Margin="4">
        <Grid.RowDefinitions>
            <RowDefinition Height="180"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Image
            Source="{StaticResource Banner}" 
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch"/>
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid Margin="10">
                <StackPanel Orientation="Horizontal">
                    <TextBlock 
                        Text="Select Basin" 
                        Width="{StaticResource LabelLength}" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"/>
                    <ComboBox 
                        Width="{StaticResource LabelLength}"
                        ItemsSource="{Binding AvailableBasins}"
                        SelectedItem="{Binding SelectedBasin}"
                        VerticalAlignment="Center"/>
                </StackPanel>
                <Button Grid.Row="0"
                        Content="Run Damage Assessment" Width="160" HorizontalAlignment="Right" Click="OnRunDamageAssessmentClick" VerticalAlignment="Stretch"/>
            </Grid>
            <ScrollViewer Grid.Row="1"  VerticalScrollBarVisibility="Auto">
                <StackPanel Orientation="Vertical" Margin="10">
                    <ItemsControl
                        x:Name="BasinScenarios"
                        ItemsSource="{Binding BasinScenarios}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <userControls:BasinScenarioControl BasinScenario="{Binding}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>